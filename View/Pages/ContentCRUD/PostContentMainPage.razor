@page "/postcontent"
@attribute [Authorize(Roles = "Poet")]

@layout CustomUserLayout

<section class="p-2" style="width:100%; overflow:hidden;">

    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active fw-bolder urdu" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Ghazal</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link fw-bolder urdu" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Nazam</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link fw-bolder urdu" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Phrases</button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <PostGhazal />
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <PostNazam />
                </div>
                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                    <PostPhrases/>
                </div>
            </div>
        </div>
    </div>
</section>
