@page "/searchpoets"
@layout View.Pages.MainPagesCustomLayout.CustomUserLayout


<section class="min-vh-100 bg-light pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="fw-bolder text-lg-end pb-3 pt-3 urdu">شاعروں کی فہرست</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active fw-bolder" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">تمام شاعر</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link fw-bolder" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">مرد شاعر</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link fw-bolder" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">خاتون شاعرہ</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <ShowAllPoets />
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <ShowMalePoets />
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        <ShowFemalePoets />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



